# LLM Provider Selection (gemini or anthropic)
# Use 'gemini' for FREE API, 'anthropic' for Claude (paid)
LLM_PROVIDER=gemini

# API Keys
# Get FREE Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic API Configuration (optional, only if using anthropic provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector Database Configuration
VECTOR_DB_PATH=./vectordb
COLLECTION_NAME=educational_content

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Models
CLAUDE_MODEL=claude-sonnet-4-20250514
GEMINI_MODEL=gemini-2.5-flash

# Generation Settings
MAX_TOKENS=8000
TEMPERATURE=0.7

# Chunking Settings (Optimized for 75+ questions per chapter)
CHUNK_SIZE=300
CHUNK_OVERLAP=100

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
